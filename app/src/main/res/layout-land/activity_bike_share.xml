<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#767272"
    android:padding="5dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#767272"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_weight="1">

    <!-- Button to add new ride-->
    <Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_size"
        android:textSize="@dimen/text_size"
        android:layout_gravity="center"
        android:background="#c75454"
        android:text="@string/ride_add"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <!-- Button to end ride-->
    <Button
        android:id="@+id/end_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_size"
        android:textSize="@dimen/text_size"
        android:layout_gravity="center"
        android:background="#c75454"
        android:text="@string/ride_end"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <!-- Button to get rides from server -->
    <Button
        android:id="@+id/get_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_size"
        android:textSize="@dimen/text_size"
        android:layout_gravity="center"
        android:background="@color/green"
        android:text="@string/list_rides"/>


        <View
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <FrameLayout
        android:id="@+id/fragment_button_container"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="?android:attr/colorBackground"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_list_container"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/colorBackground"/>

</LinearLayout>
